@model ActGIPelectroWeb.ViewModels.AppAndSwitchPrintViewModels

<form method="post" action="#" id="printJS-form">
    <style>

        .print-table {
            width: 100%;
            height: 100%;
            border: 1px solid #808080;
            white-space: nowrap;
        }

            .print-table th {
                border: 1px solid #808080;
                font-weight: bold;
                color: #000000;
                text-align: center;
                word-wrap: normal;
            }

            .print-table td {
                cursor: pointer;
                text-align: center;
                color: #000000;
                border: 1px solid #808080;
                word-wrap: break-word;
                hyphens: auto;
            }

    </style>
    <table class='print-table'>
        <tr>
            <th>№ заявки</th>
            <th>Дата</th>
            <th>ОП</th>
            <th>Категория</th>
            <th>Ремонт</th>
            <th>А/Г</th>
            <th>Состояние заявки</th>
        </tr>
        <tr>
            <td id='t1' style="padding-left: 10px; padding-right: 10px;">
                @Model._appList[0].NambId
            </td>
            <td style="padding-left: 10px; padding-right: 10px;">
                @Model._appList[0].Date.ToString("dd.MM.yyyy")
            </td>
            <td style="padding-left: 10px; padding-right: 10px;">
                @Model._appList[0].NetRegion
            </td>
            <td id='t4' style="padding-left: 10px; padding-right: 10px;">
                @Model._appList[0].Category
            </td>
            <td id='t5' style="padding-left: 10px; padding-right: 10px;">
                @Model._appList[0].Repair
            </td>
            <td id='t6' style="padding-left: 10px; padding-right: 10px;">
                @Model._appList[0].Ag
            </td>
            <td style="padding-left: 10px; padding-right: 10px;">
                @Model._appList[0].State
            </td>
        </tr>
        <tr>
            <th colspan='2'>Объект</th>
            <th colspan='5'>Оборудование</th>
        </tr>
        <tr>
            <td colspan='2' id='t8' style="padding-left: 10px; padding-right: 10px;">
                @Model._appList[0].ObjectName
            </td>
            <td colspan='5' id='t9' style="padding-left: 10px; padding-right: 10px;">
                @Model._appList[0].Equipment
            </td>
        </tr>
        <tr>
            <th colspan='4'>Содержание работ</th>
            <th rowspan='2' colspan='2'>Просимое время</th>
            <td id='t10' style="padding-left: 10px; padding-right: 10px;">
                @(Model._appList[0].RequestedDate.ToString("dd.MM.yyyy") + " — " + Model._appList[0].RequestedEndDate.ToString("dd.MM.yyyy"))
                

            </td>
        </tr>
        <tr>
            <td rowspan='3' colspan='4' style='padding-left: 10px; padding-right: 10px; text-align: left' id='t11'>
                @if (Model._appList[0].Description != null)
                {
                    @Html.Raw(Model._appList[0].Description.Replace("\n", "<br>"))
                }
            </td>
            <td id='t12'>
                @(Model._appList[0].RequestedStartTime.ToString("HH:mm") + " — " + @Model._appList[0].RequestedEndTime.ToString("HH:mm"))
            </td>
        </tr>
        <tr>
            <th colspan='2'>Подпись</th>
            <td>@Model._appList[0].NamePodpisant</td>
        </tr>
        <tr><th colspan='2'>Рассмотрена</th><td></td></tr>
        <tr>
            <th colspan='4'>Меры безопасности</th>
            <td colspan='3'></td>
        </tr>
        <tr>
            <td id='t14' rowspan='3' colspan='4' style='text-align: left; padding-left: 10px; padding-right: 10px'>
                @if (Model._appList[0].Security != null)
                {
                    @Html.Raw(Model._appList[0].Security.Replace("\n", "<br>"))
                }

            </td>
        </tr>
        <tr>
            <th colspan='2'>Открыта</th>
            <td style="padding-left: 10px; padding-right: 10px">
                @if (Model._appList[0].OpenTime.ToString("dd.MM.yyyy HH:mm") != "01.01.0001 00:00")
                {
                    <p>@Model._appList[0].OpenTime.ToString("dd.MM.yyyy HH:mm")</p>
                }
            </td>
        </tr>
        <tr>
            <th colspan='2'>Закрыта</th>
            <td style="padding-left: 10px; padding-right: 10px">
                @if (Model._appList[0].CloseTime.ToString("dd.MM.yyyy HH:mm") != "01.01.0001 00:00")
                {
                    <p>@Model._appList[0].CloseTime.ToString("dd.MM.yyyy HH:mm")</p>
                }
            </td>
        </tr>
        <tr>
            <th colspan='7'>Примечания</th>
        </tr>
        <tr>
            <td colspan='7' style='text-align: left; padding-left: 10px; padding-right: 10px' id="t18">
                @if (Model._appList[0].Notes != null)
                {
                    @Html.Raw(Model._appList[0].Notes.Replace("\n", "<br>"))
                }
            </td>
        </tr>
    </table>
</form>
<script>
    printJS({
        printable: 'printJS-form',
        type: 'html'
    });
</script>
                